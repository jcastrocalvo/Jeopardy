                android:layout_width="150dp"
                android:layout_height="200dp"
                card_view:cardCornerRadius="4dp"
                card_view:cardBackgroundColor="#0D47A1"
                android:elevation="24dp"
                android:layout_margin="5dp">
                <TextView
                    android:text="Literature"
