            <android.support.v7.widget.CardView
                android:id="@+id/first_view"
                android:layout_gravity="center_horizontal"
                android:layout_width="150dp"
                android:layout_height="200dp"
                card_view:cardCornerRadius="4dp"
                card_view:cardBackgroundColor="#0D47A1"
                android:elevation="24dp"
                android:layout_margin="5dp">
                <TextView
                    android:text="History"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:id="@+id/textView1"
                    android:layout_gravity="top"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textStyle="bold"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:id="@+id/twoButton"
                    android:text="@string/TwoHundred"
                    android:textColor="#ffffff"
                    android:layout_gravity="top"
                    android:layout_marginTop="33dp"
                    android:background="@drawable/button_border"
                    android:onClick="HistQuestionTwoHundred"
                    />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:layout_below="@+id/eightButton"
                    android:id="@+id/tenButton"
                    android:text="@string/Thousand"
                    android:textColor="#ffffff"
                    android:background="@drawable/button_border"
                    android:layout_gravity="top"
                    android:layout_marginTop="165dp"
                    android:onClick="HistQuestionThousand"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:id="@+id/fourButton"
                    android:layout_below="@+id/twoButton"
                    android:text="@string/FourHundred"
                    android:textColor="#ffffff"
                    android:layout_gravity="top"
                    android:layout_marginTop="66dp"
                    android:background="@drawable/button_border"
                    android:onClick="HistQuestionFourHundred"
                    />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:id="@+id/sixButton"
                    android:text="@string/SixHundred"
                    android:layout_gravity="top"
                    android:layout_marginTop="99dp"
                    android:textColor="#ffffff"
                    android:background="@drawable/button_border"
                    android:onClick="HistQuestionSixHundred"
                    />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:id="@+id/eightButton"
                    android:layout_below="@+id/twoButton"
                    android:text="@string/EightHundred"
                    android:textColor="#ffffff"
                    android:layout_gravity="top"
                    android:layout_marginTop="132dp"
                    android:background="@drawable/button_border"
                    android:visibility="visible"
                    android:onClick="HistQuestionEightHundred"
                    />

            </android.support.v7.widget.CardView>

